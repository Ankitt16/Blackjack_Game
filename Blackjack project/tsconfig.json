{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",                             
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,                                 

    /* Debugging Options */
    "sourceMap": true,                              
    "incremental": true,                            

    /* Module Resolution */
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,       

    /* Performance Options */
    "skipLibCheck": true,                           

    /* Type Checking Options */
    "noImplicitAny": false,                         
    "strictNullChecks": true,                       

    /* Emit Options */
    "removeComments": false,                       

    /* Path Aliases */

  },
  "include": ["./src/**/*.ts"],                   
  "exclude": ["node_modules", "test/**/*.ts"]        
}

